<div>
  <div>
    <h1>
      Body part #<%= @the_body_part.id %> details
    </h1>

    <div>
      <div>
        <a href="/body_parts">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_body_part/<%= @the_body_part.id %>">
          Delete body part
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Body part name
      </dt>
      <dd>
        <%= @the_body_part.body_part_name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_body_part.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_body_part.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit body part
    </h2>

    <form action="/modify_body_part/<%= @the_body_part.id %>"  method="post" >
      <div>
        <label for="body_part_name_box">
          Body part name
        </label>

        <input type="text" id="body_part_name_box" name="query_body_part_name" value="<%= @the_body_part.body_part_name %>">
      </div>

      <button>
        Update body part
      </button>
    </form>
  </div>
</div>

<hr>
